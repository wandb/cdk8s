{
  "$ref": "#/definitions/wandb-config-cdk",
  "definitions": {
    "wandb-config-cdk": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "webServices": {
          "type": "object",
          "properties": {
            "image": {
              "type": "object",
              "properties": {
                "repository": {
                  "type": "string"
                },
                "tag": {
                  "type": "string",
                  "default": "latest"
                }
              },
              "required": [
                "repository"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "image"
          ],
          "additionalProperties": false
        },
        "mysql": {
          "allOf": [
            {
              "type": "object",
              "properties": {
                "password": {
                  "type": "object",
                  "properties": {
                    "secret": {
                      "type": "string"
                    },
                    "key": {
                      "type": "string"
                    },
                    "checksum": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "secret",
                    "key"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "password"
              ]
            },
            {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "number"
                },
                "user": {
                  "type": "string"
                },
                "database": {
                  "type": "string"
                }
              },
              "required": [
                "host",
                "port",
                "user",
                "database"
              ]
            }
          ]
        },
        "bucket": {
          "type": "object",
          "properties": {
            "connectionString": {
              "type": "string"
            },
            "region": {
              "type": "string",
              "default": ""
            },
            "kmsKey": {
              "type": "string",
              "default": ""
            }
          },
          "required": [
            "connectionString"
          ],
          "additionalProperties": false
        },
        "sso": {
          "type": "object",
          "properties": {
            "oidc": {
              "type": "object",
              "properties": {
                "clientId": {
                  "type": "string"
                },
                "issuer": {
                  "type": "string"
                },
                "method": {
                  "type": "string",
                  "enum": [
                    "implicit",
                    "pkce"
                  ],
                  "default": "implicit"
                }
              },
              "required": [
                "clientId",
                "issuer"
              ],
              "additionalProperties": false
            },
            "ldap": {
              "type": "object",
              "properties": {},
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "mysql",
        "bucket"
      ],
      "additionalProperties": false,
      "description": "Configuration schema for generating k8s manifests"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}