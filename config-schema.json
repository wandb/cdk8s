{
  "$ref": "#/definitions/wandb-config-cdk",
  "definitions": {
    "wandb-config-cdk": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "common": {
          "type": "object",
          "properties": {
            "metadata": {
              "type": "object",
              "properties": {
                "ownerReference": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "apiVersion": {
                        "type": "string"
                      },
                      "blockOwnerDeletion": {
                        "type": "boolean"
                      },
                      "controller": {
                        "type": "boolean"
                      },
                      "kind": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "uid": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "apiVersion",
                      "controller",
                      "kind",
                      "name",
                      "uid"
                    ],
                    "additionalProperties": false
                  },
                  "default": []
                },
                "annotations": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  },
                  "default": {}
                },
                "labels": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  },
                  "default": {}
                }
              },
              "additionalProperties": false,
              "default": {}
            }
          },
          "additionalProperties": false,
          "default": {}
        },
        "webServices": {
          "type": "object",
          "properties": {
            "image": {
              "type": "object",
              "properties": {
                "repository": {
                  "type": "string"
                },
                "tag": {
                  "type": "string"
                }
              },
              "required": [
                "repository",
                "tag"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "image"
          ],
          "additionalProperties": false
        },
        "mysql": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "number"
                },
                "user": {
                  "type": "string"
                },
                "database": {
                  "type": "string"
                },
                "password": {
                  "type": "object",
                  "properties": {
                    "secret": {
                      "type": "string"
                    },
                    "key": {
                      "type": "string"
                    },
                    "checksum": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "secret",
                    "key"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "host",
                "port",
                "user",
                "database",
                "password"
              ],
              "additionalProperties": false
            },
            {
              "type": "object",
              "properties": {
                "managed": {
                  "type": "boolean",
                  "const": true
                },
                "image": {
                  "type": "object",
                  "properties": {
                    "repository": {
                      "type": "string",
                      "default": "wandb/local"
                    },
                    "tag": {
                      "type": "string",
                      "default": "latest"
                    }
                  },
                  "additionalProperties": false
                },
                "password": {
                  "type": "object",
                  "properties": {
                    "secret": {
                      "type": "string"
                    },
                    "key": {
                      "type": "string"
                    },
                    "checksum": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "secret",
                    "key"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "managed",
                "password"
              ],
              "additionalProperties": false
            }
          ]
        },
        "bucket": {
          "type": "object",
          "properties": {
            "connectionString": {
              "type": "string"
            },
            "region": {
              "type": "string",
              "default": ""
            },
            "kmsKey": {
              "type": "string",
              "default": ""
            }
          },
          "required": [
            "connectionString"
          ],
          "additionalProperties": false
        },
        "sso": {
          "type": "object",
          "properties": {
            "oidc": {
              "type": "object",
              "properties": {
                "clientId": {
                  "type": "string"
                },
                "issuer": {
                  "type": "string"
                },
                "method": {
                  "type": "string",
                  "enum": [
                    "implicit",
                    "pkce"
                  ],
                  "default": "implicit"
                }
              },
              "required": [
                "clientId",
                "issuer"
              ],
              "additionalProperties": false
            },
            "ldap": {
              "type": "object",
              "properties": {},
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "required": [
        "mysql",
        "bucket"
      ],
      "additionalProperties": false,
      "description": "Configuration schema for generating k8s manifests"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}